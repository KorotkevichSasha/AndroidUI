<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/back"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/bottle1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/bottle3"
            android:layout_weight="1"
            android:onClick="battle3"
            />
        <ImageView
            android:id="@+id/bottle2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/bottle4"
            android:layout_weight="1"
            android:onClick="battle4"
            />
        <ImageView
            android:id="@+id/bottle3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/bottle5"
            android:layout_weight="1"
            android:onClick="battle5"
            />
        <ImageView
            android:id="@+id/bottle4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/bottle7"
            android:layout_weight="1"
            android:onClick="battle7"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/bottle"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/bottle7"
        android:layout_centerInParent="true"
        android:onClick="spinBottle"
        />

    <HorizontalScrollView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/scrollBack_02"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/table2"
                android:layout_margin="15dp"
                android:onClick="clickBack_01"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/scrollBack_03"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/table3"
                android:layout_margin="15dp"
                android:onClick="clickBack_02"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/scrollBack_05"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/table5"
                android:layout_margin="15dp"
                android:onClick="clickBack_04"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/scrollBack_06"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/grass"
                android:layout_margin="15dp"
                android:onClick="clickBack_05"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/scrollBack_07"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/asphalt"
                android:layout_margin="15dp"
                android:onClick="clickBack_06"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/scrollBack_08"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/carpet3"
                android:layout_margin="15dp"
                android:onClick="clickBack_07"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>